<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_wrap_content"
        android:background="@color/c_gray_12"
        android:orientation="vertical">

    <LinearLayout style="@style/style_match_wrap_content">
        <TextView
                android:id="@+id/tv_receivde1_01"
                style="@style/style_wrap_content_w0_gc_pd14_ts12_tcb6_drxx"
                android:layout_gravity="center"
                android:width="@dimen/dimen_0"
                android:layout_width="wrap_content"
                android:drawablePadding="@dimen/dimen_5"
                android:text="全部项目" />
    </LinearLayout>

    <LinearLayout
            style="@style/style_match_wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_15"
            android:orientation="vertical"
            android:visibility="gone">

        <LinearLayout
                style="@style/style_match_wrap_content"
                android:layout_marginTop="@dimen/dimen_10">

            <EditText
                    style="@style/style_wrap_content"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:background="@drawable/txt_bg_selector"
                    android:hint="输入姓名/手机号码查询"
                    android:padding="@dimen/dimen_10"
                    android:textColor="@color/c_black_6"
                    android:textColorHint="@color/c_black_7"
                    android:textSize="@dimen/dimen_12" />

            <TextView
                    style="@style/style_wrap_content"
                    android:background="@drawable/btn_bg_quit_login_normal"
                    android:paddingLeft="@dimen/dimen_25"
                    android:paddingTop="@dimen/dimen_8"
                    android:paddingRight="@dimen/dimen_25"
                    android:paddingBottom="@dimen/dimen_8"
                    android:text="查询"
                    android:textColor="@color/white_01"
                    android:textSize="@dimen/dimen_14" />
        </LinearLayout>


        <RelativeLayout
                style="@style/style_match_wrap_content"
                android:layout_marginTop="@dimen/dimen_16">

            <TextView
                    style="@style/style_wrap_content"
                    android:layout_centerVertical="true"
                    android:text="共 0 个客户待分配"
                    android:textSize="@dimen/dimen_14" />

            <TextView
                    style="@style/style_wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:layout_toLeftOf="@+id/tv_po_cust_06"
                    android:text="全选"
                    android:textSize="@dimen/dimen_14" />

            <TextView
                    android:id="@+id/tv_po_cust_06"
                    style="@style/style_wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/tv_bg_quit_login_normal"
                    android:padding="@dimen/dimen_10"
                    android:text="批量分配"
                    android:textColor="@color/c_red_4"
                    android:textSize="@dimen/dimen_14" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>