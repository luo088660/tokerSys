<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/style_match_content"
              android:fitsSystemWindows="true"
              android:background="@color/c_gray_122"
              android:orientation="vertical">

    <include layout="@layout/layout_content_title"/>

    <LinearLayout style="@style/style_match_wrap_content"
                  android:background="@color/white"
            android:orientation="horizontal"
                  android:paddingTop="@dimen/dimen_10"
                  android:paddingBottom="@dimen/dimen_10"
                  android:paddingLeft="@dimen/dimen_16"
                  android:paddingRight="@dimen/dimen_16">
        <LinearLayout
                style="@style/style_match_wrap_content"
                android:gravity="center"
                android:background="@drawable/edit_bg_selector">
            <EditText style="@style/style_wrap_content"
                    android:textColor="@color/c_black_7"

                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingRight="@dimen/dimen_10"
                    android:paddingBottom="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimen_12"
                    android:background="@null"
                    android:id="@+id/et_view_day_miss"
                    android:hint="输入团队或姓名快速查询"/>
            <ImageView style="@style/style_wrap_content"
                    android:id="@+id/img_day_miss_quqea"
                    android:padding="@dimen/dimen_5"
                    android:src="@mipmap/icon_query"/>

        </LinearLayout>

    </LinearLayout>

    <TextView style="@style/style_match_wrap_content"
              android:textSize="@dimen/dimen_14"
              android:layout_marginLeft="@dimen/dimen_16"
              android:layout_marginTop="@dimen/dimen_10"
              android:layout_marginBottom="@dimen/dimen_10"
              android:textColor="@color/c_black_6"
              android:text="每日任务分解"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_view_day"
            style="@style/style_match_wrap_content"/>

</LinearLayout>