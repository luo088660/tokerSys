<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_wrap_content"
        android:orientation="vertical">

    <LinearLayout style="@style/style_match_wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:paddingRight="@dimen/dimen_16"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/title_visit"
                style="@style/style_wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_16"
                android:text="请选择"
                android:textColor="@color/c_black_6"
                android:textSize="16sp" />

        <ImageView style="@style/style_wrap_content"
                android:id="@+id/img_visit"
                android:visibility="gone"
                android:src="@mipmap/icon_select"/>
    </LinearLayout>

    <View style="@style/horizontalLine" />


</LinearLayout>