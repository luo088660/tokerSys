<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_wrap_content"
        android:orientation="vertical">

    <LinearLayout
            style="@style/style_match_wrap_content"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginRight="@dimen/dimen_40"
            android:background="@drawable/dialog_bg_selector"
            android:orientation="vertical">

        <RelativeLayout style="@style/style_match_wrap_content">

            <TextView
                    style="@style/style_wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dimen_13"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:text="今日考勤"
                    android:textColor="@color/c_black_6"
                    android:textSize="@dimen/dimen_16" />

            <ImageView
                    android:id="@+id/img_layout_nc_exist_close"
                    style="@style/style_wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_18"
                    android:src="@mipmap/icon_close" />
        </RelativeLayout>

        <View style="@style/horizontalLine" />

        <LinearLayout
                style="@style/style_match_wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_16">

            <TextView
                    android:id="@+id/tv_dialog_remark_01"
                    style="@style/style_wrap_content"
                    android:gravity="left"
                    android:lineSpacingMultiplier="1.2"
                    android:text="签到\n09:00" />

            <LinearLayout
                    style="@style/style_wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_meatten_remar_01"
                        style="@style/style_match_wrap_content"
                        android:drawableLeft="@mipmap/icon_loca"
                        android:drawablePadding="@dimen/dimen_5"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxEms="7"
                        android:textColor="@color/c_gray_6"
                        android:textSize="@dimen/dimen_12" />

                <LinearLayout
                        android:id="@+id/ll_me_atten_01"
                        style="@style/style_wrap_content"
                        android:layout_marginTop="@dimen/dimen_5">

                    <TextView
                            android:id="@+id/tv_dialog_remark_02"
                            style="@style/style_wrap_content"
                            android:layout_marginRight="@dimen/dimen_18"
                            android:text="迟到"
                            android:textColor="@color/c_red_4"
                            android:textSize="@dimen/dimen_12" />

                    <TextView
                            style="@style/style_wrap_content"
                            android:layout_width="wrap_content"
                            android:text="备注"

                            android:textColor="@color/c_blue_6"
                            android:textSize="@dimen/dimen_12" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                    android:id="@+id/btn_me_atten_01"
                    style="@style/style_wrap_content_ts14_tcb6_bg_ptpb10_plpr20"
                    android:text="签到"
                    android:textColor="@color/btn_red"
                    android:textSize="@dimen/dimen_14" />
        </LinearLayout>

        <EditText
                android:id="@+id/et_fill_report"
                style="@style/style_match_wrap_content"
                android:layout_height="@dimen/dimen_60"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginRight="@dimen/dimen_16"
                android:background="@drawable/edit_bg_selector"
                android:gravity="start"
                android:hint="请填写签到备注"
                android:padding="@dimen/dimen_10"
                android:textColor="@color/c_black_6"
                android:textColorHint="@color/c_gray_6"
                android:textSize="@dimen/dimen_12" />

        <LinearLayout
                style="@style/style_match_wrap_content"
                android:layout_margin="@dimen/dimen_16">

            <TextView
                    android:id="@+id/btn_call_phone_cancel"
                    style="@style/style_wrap_content"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg_selector"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingRight="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_5"
                    android:text="取消"
                    android:textColor="@color/c_gray_6"
                    android:textSize="@dimen/dimen_14" />

            <TextView
                    android:id="@+id/btn_call_phone_determine"
                    style="@style/style_wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_quit_login_normal"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingRight="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_5"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>