<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/style_match_content"
        android:background="@color/c_gray_12">

    <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/sv_punch_record"
            style="@style/style_match_content"
            android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView style="@style/style_match_content">

            <LinearLayout
                    android:id="@+id/ll_my_little"
                    style="@style/style_match_content"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_entir_05"
                        style="@style/style_wrap_content_ts12_tchg6_tcb6_pdtb14_pdlr10"
                        android:drawableRight="@mipmap/icon_shuaxuan"
                        android:drawablePadding="@dimen/dimen_10"
                        android:hint="选择日期"
                        android:textSize="@dimen/dimen_12" />


                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_punch_record"
                        style="@style/style_match_content"
                        android:layout_marginTop="@dimen/dimen_10" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>
</RelativeLayout>