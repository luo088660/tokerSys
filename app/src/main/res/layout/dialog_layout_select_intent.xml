<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <RelativeLayout style="@style/style_match_wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:background="#fff6f6f6"
                android:gravity="center"
                android:text="请选择意向级别"
                android:textColor="@color/c_black_7"
                android:textSize="@dimen/dimen_14" />

        <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_45"
                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:text="取消"
                android:textColor="@color/c_black_6"
                android:textSize="@dimen/dimen_14" />
    </RelativeLayout>

    <View style="@style/horizontalLine" />

    <TextView
            android:id="@+id/tv_take_photo_a"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:background="@color/white"
            android:gravity="center"
            android:text="A级"
            android:textColor="@color/c_black_6"
            android:textSize="@dimen/dimen_14" />

    <View style="@style/horizontalLine" />

    <TextView
            android:id="@+id/tv_take_photo_b"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:background="@color/white"
            android:gravity="center"
            android:text="B级"
            android:textColor="@color/c_black_6"
            android:textSize="@dimen/dimen_14" />

    <View style="@style/horizontalLine" />

    <TextView
            android:id="@+id/tv_take_photo_c"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:background="@color/white"
            android:gravity="center"
            android:text="C级"
            android:textColor="@color/c_black_6"
            android:textSize="@dimen/dimen_14" />

    <View style="@style/horizontalLine" />

    <TextView
            android:id="@+id/tv_take_photo_d"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:background="@color/white"
            android:gravity="center"
            android:text="D级"
            android:textColor="@color/c_black_6"
            android:textSize="@dimen/dimen_14" />


</LinearLayout>