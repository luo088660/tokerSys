<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_content"
        android:background="@color/c_gray_12"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

    <include layout="@layout/layout_content_title" />

    <LinearLayout
            style="@style/style_match_wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_6">

        <TextView
                android:id="@+id/tv_enter_new_01"
                style="@style/style_match_wrap_content"
                android:layout_marginRight="@dimen/dimen_16"
                android:gravity="center"
                android:padding="@dimen/dimen_20"
                android:text="手机号码  13546489001"
                android:textColor="@color/c_black_6"
                android:textSize="@dimen/dimen_16" />

        <View style="@style/horizontalLine" />

        <LinearLayout
                style="@style/style_match_wrap_content"
                android:gravity="center">

            <TextView
                    style="@style/style_wrap_content_ts14_tc7"
                    android:text="设置新密码" />

            <EditText
                    android:id="@+id/tv_enter_new_02"
                    android:inputType="textPassword"
                    style="@style/style_wrap_content_w1_mt16mb16_ml20_bnull_ts14"
                    android:hint="" />

            <CheckBox
                    style="@style/style_wrap_content_img_ptpbpl8_pr16"
                    android:id="@+id/cb_new_01"
                    android:button="@drawable/cb_bg_pwd_selector" />
        </LinearLayout>

        <View style="@style/horizontalLine" />

        <LinearLayout
                style="@style/style_match_wrap_content"
                android:gravity="center">

            <TextView
                    style="@style/style_wrap_content_ts14_tc7"
                    android:text="确认新密码" />

            <EditText
                    android:id="@+id/tv_enter_new_03"
                    android:inputType="textPassword"
                    style="@style/style_wrap_content_w1_mt16mb16_ml20_bnull_ts14"
                    android:hint="" />

            <CheckBox
                    style="@style/style_wrap_content_img_ptpbpl8_pr16"
                    android:id="@+id/cb_new_02"
                    android:button="@drawable/cb_bg_pwd_selector" />
        </LinearLayout>
    </LinearLayout>

    <TextView
            style="@style/style_match_wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="请设置至少8位字母+数字组合密码"
            android:textColor="@color/c_black_7"
            android:textSize="@dimen/dimen_12" />

    <Button
            android:id="@+id/btn_fro_ps_commin_"
            style="@style/style_match_wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_16"
            android:background="@drawable/btn_bg_quit_login_normal"
            android:padding="@dimen/dimen_12"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16" />
</LinearLayout>