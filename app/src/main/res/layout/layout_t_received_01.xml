<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_wrap_content"
        android:background="@color/c_gray_12"
        android:orientation="vertical">

    <LinearLayout style="@style/style_match_wrap_content">

        <TextView
                android:id="@+id/tv_receivde1_01"
                style="@style/style_wrap_content_w0_gc_pd14_ts12_tcb6_drxx"
                android:text="全部项目" />

        <TextView
                android:id="@+id/tv_receivde1_02"
                style="@style/style_wrap_content_w0_gc_pd14_ts12_tcb6_drxx"
                android:layout_width="@dimen/dimen_0"
                android:layout_weight="1.3"
                android:text="全部任务类型" />

        <LinearLayout
                style="@style/style_wrap_content"
                android:layout_width="@dimen/dimen_0"
                android:layout_weight="1"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv_receivde1_03"
                    style="@style/style_wrap_content_w0_gc_pd14_ts12_tcb6_drxx"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    android:drawablePadding="@dimen/dimen_10"
                    android:text="全部状态" />
        </LinearLayout>

        <TextView
                android:id="@+id/tv_receivde1_11"
                style="@style/style_wrap_content_w0_gc_pd14_ts12_tcb6_drxx"
                android:text="任务类别"
                android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
            style="@style/style_match_wrap_content"
            android:layout_gravity="center"
            android:background="@color/c_gray_12"
            android:gravity="center">

        <LinearLayout
                style="@style/style_wrap_content"
                android:id="@+id/ll_received_start_time"
                android:visibility="gone"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_receivde1_04"
                    style="@style/style_wrap_content_ts12_tchg6_tcb6_pdtb14_pdlr10"
                    android:hint="开始日期" />

            <TextView
                    style="@style/style_wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:layout_marginRight="@dimen/dimen_6"
                    android:text="至"
                    android:textColor="@color/c_gray_6"
                    android:textSize="@dimen/dimen_12" />
        </LinearLayout>

        <TextView
                android:id="@+id/tv_receivde1_05"
                style="@style/style_wrap_content_ts12_tchg6_tcb6_pdtb14_pdlr10"
                android:hint="结束日期" />

        <ImageView
                android:id="@+id/tv_receivde1_06"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:padding="@dimen/dimen_8"
                android:src="@mipmap/icon_shuaxuan" />
    </LinearLayout>

    <TextView
            android:id="@+id/tv_receivde1_07"
            style="@style/style_match_wrap_content"
            android:layout_gravity="left"
            android:background="@color/c_gray_122"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_10"
            android:text="共 0 个任务"
            android:textSize="@dimen/dimen_12" />

</LinearLayout>