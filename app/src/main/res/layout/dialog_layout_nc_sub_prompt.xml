<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_wrap_content">

    <LinearLayout
            style="@style/style_match_wrap_content"
            android:layout_marginLeft="@dimen/dimen_45"
            android:layout_marginRight="@dimen/dimen_45"
            android:background="@drawable/dialog_bg_selector"
            android:orientation="vertical">

        <RelativeLayout style="@style/style_match_wrap_content">

            <TextView
                    style="@style/style_wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dimen_13"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:text="提示"
                    android:textColor="@color/c_black_6"
                    android:textSize="@dimen/dimen_16" />

            <ImageView
                    android:id="@+id/img_call_phone_close"
                    style="@style/style_wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_18"
                    android:src="@mipmap/icon_close" />
        </RelativeLayout>

        <View style="@style/horizontalLine" />

        <TextView
                android:id="@+id/tv_dialog_ns_context"
                style="@style/style_match_wrap_content"
                android:layout_marginTop="@dimen/dimen_25"
                android:layout_marginBottom="@dimen/dimen_15"
                android:gravity="center"
                android:text="确认提交吗?"
                android:textColor="@color/c_black_6"
                android:textSize="@dimen/dimen_14" />


        <LinearLayout
                android:id="@+id/ll_new_custom"
                style="@style/style_match_wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dimen_16">

            <TextView
                    android:id="@+id/btn_new_nc_cancel"
                    style="@style/style_wrap_content"
                    android:layout_marginRight="@dimen/dimen_12"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg_selector"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingRight="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_5"
                    android:text="取消"
                    android:textColor="@color/c_gray_6"
                    android:textSize="@dimen/dimen_14" />

            <TextView
                    android:id="@+id/btn_new_nc_determine"
                    style="@style/style_wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_quit_login_normal"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingRight="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_5"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>