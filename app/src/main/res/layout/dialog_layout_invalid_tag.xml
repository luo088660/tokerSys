<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_wrap_content"
        android:orientation="vertical">

    <LinearLayout
            style="@style/style_match_wrap_content"
            android:layout_marginLeft="@dimen/dimen_45"
            android:layout_marginRight="@dimen/dimen_45"
            android:background="@drawable/dialog_bg_selector"
            android:orientation="vertical">

        <RelativeLayout style="@style/style_match_wrap_content">

            <TextView
                    style="@style/style_wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dimen_13"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:text="提示"
                    android:textColor="@color/c_black_6"
                    android:textSize="@dimen/dimen_16" />

            <ImageView
                    android:id="@+id/img_layout_nc_exist_close"
                    style="@style/style_wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_18"
                    android:src="@mipmap/icon_close" />
        </RelativeLayout>

        <View style="@style/horizontalLine" />

        <TextView
                android:id="@+id/tv_layout_nc_exist_content"
                style="@style/style_match_wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_marginRight="@dimen/dimen_20"
                android:text="确定将客户【王女士】标记无效吗？"
                android:textColor="@color/c_black_6"
                android:textSize="@dimen/dimen_14" />

        <LinearLayout
                style="@style/style_match_wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_marginRight="@dimen/dimen_20"
                android:gravity="center">

            <TextView
                    style="@style/style_wrap_content"
                    android:text="请填写无效原因"
                    android:textColor="@color/c_black_6"
                    android:textSize="@dimen/dimen_14" />

            <TextView
                    style="@style/style_match_wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:text="(必填)"
                    android:textColor="@color/c_red_4"
                    android:textSize="@dimen/dimen_14" />
        </LinearLayout>

        <EditText
                android:id="@+id/et_fill_report"
                style="@style/style_match_wrap_content"
                android:layout_height="@dimen/dimen_60"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_marginRight="@dimen/dimen_16"
                android:background="@drawable/edit_bg_selector"
                android:gravity="start"
                android:padding="@dimen/dimen_10"
                android:textColor="@color/c_black_6"
                android:textColorHint="@color/c_gray_6"
                android:textSize="@dimen/dimen_12" />

        <LinearLayout
                style="@style/style_match_wrap_content"
                android:layout_margin="@dimen/dimen_16">

            <TextView
                    android:id="@+id/btn_call_phone_cancel"
                    style="@style/style_wrap_content"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg_selector"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingRight="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_5"
                    android:text="取消"
                    android:textColor="@color/c_gray_6"
                    android:textSize="@dimen/dimen_14" />

            <TextView
                    android:id="@+id/btn_call_phone_determine"
                    style="@style/style_wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_quit_login_normal"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingRight="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_5"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>