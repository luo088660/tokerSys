<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
             style="@style/style_match_wrap_content">
    <TextView style="@style/style_match_wrap_content"
              android:layout_marginTop="@dimen/dimen_10"
              android:id="@+id/tv_view_atten2_01"
              android:text="2019、05  实出勤300人"
              android:padding="@dimen/dimen_15"
              android:textSize="@dimen/dimen_14"
              android:textColor="@color/c_black_7"
              android:background="@color/white"
              android:gravity="center"/>
    <View style="@style/horizontalLine"/>
    <LinearLayout style="@style/style_match_wrap_content"
                  android:paddingTop="@dimen/dimen_15"
                  android:paddingBottom="@dimen/dimen_15"
                  android:background="@color/white">
        <LinearLayout style="@style/style_wrap_content"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:orientation="vertical">
            <TextView style="@style/style_wrap_content"
                      android:id="@+id/tv_attend_sta_01"
                      android:textSize="@dimen/dimen_20"
                      android:textColor="@color/c_black_6"/>
            <TextView style="@style/style_wrap_content"
                      android:layout_marginTop="@dimen/dimen_10"
                      android:textSize="@dimen/dimen_12"
                      android:textColor="@color/c_black_7"
                      android:text="签到(人次)"/>

        </LinearLayout>
        <View style="@style/verticalLine"
              android:layout_marginTop="@dimen/dimen_10"
              android:layout_marginBottom="@dimen/dimen_10"/>
        <LinearLayout style="@style/style_wrap_content"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:orientation="vertical">
            <TextView style="@style/style_wrap_content"
                      android:id="@+id/tv_attend_sta_02"
                      android:textSize="@dimen/dimen_20"
                      android:textColor="@color/c_black_6"/>
            <TextView style="@style/style_wrap_content"
                      android:layout_marginTop="@dimen/dimen_10"
                      android:textSize="@dimen/dimen_12"
                      android:textColor="@color/c_black_7"
                      android:text="签退(人次)"/>

        </LinearLayout>
        <View style="@style/verticalLine"
              android:layout_marginTop="@dimen/dimen_10"
              android:layout_marginBottom="@dimen/dimen_10"/>
        <LinearLayout style="@style/style_wrap_content"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:orientation="vertical">
            <TextView style="@style/style_wrap_content"
                      android:id="@+id/tv_attend_sta_03"
                      android:textSize="@dimen/dimen_20"
                      android:textColor="@color/c_black_6"/>
            <TextView style="@style/style_wrap_content"
                      android:layout_marginTop="@dimen/dimen_10"
                      android:textSize="@dimen/dimen_12"
                      android:textColor="@color/c_black_7"
                      android:text="考勤正常(人次)"/>

        </LinearLayout>
        <View style="@style/verticalLine"
              android:layout_marginTop="@dimen/dimen_10"
              android:layout_marginBottom="@dimen/dimen_10"/>
        <LinearLayout style="@style/style_wrap_content"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:orientation="vertical">
            <TextView style="@style/style_wrap_content"
                      android:textSize="@dimen/dimen_20"
                      android:id="@+id/tv_attend_sta_04"
                      android:textColor="@color/c_orange_5"/>
            <TextView style="@style/style_wrap_content"
                      android:layout_marginTop="@dimen/dimen_10"
                      android:textSize="@dimen/dimen_12"
                      android:textColor="@color/c_black_7"
                      android:text="考勤异常(人次)"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>