<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              style="@style/style_match_wrap_content"
              android:background="@color/white">

    <LinearLayout style="@style/style_match_wrap_content"
                  android:gravity="center"
    >
        <TextView
                android:id="@+id/tv_item_select_user_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:padding="@dimen/dimen_16"
                android:textColor="@color/c_black_7"
                android:gravity="center"
                android:textSize="@dimen/dimen_14"/>
        <TextView
                android:id="@+id/tv_item_select_user_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择拓客员"
                android:layout_weight="1"
                android:textStyle="bold"
                android:padding="@dimen/dimen_15"
                android:textColor="@color/c_black_6"
                android:gravity="center"
                android:textSize="@dimen/dimen_16"/>
        <TextView
                android:id="@+id/tv_item_select_user_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:padding="@dimen/dimen_16"
                android:textColor="@color/c_red_4"
                android:gravity="center"
                android:textSize="@dimen/dimen_14"/>
    </LinearLayout>


    <View style="@style/horizontalLine"/>


    <LinearLayout
            style="@style/style_match_wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_16"
            android:layout_marginLeft="@dimen/dimen_16"
            android:background="@drawable/edit_bg_selector">
        <EditText style="@style/style_wrap_content"
                android:hint="输入姓名快速查询"
                android:id="@+id/tv_item_select_user_04"
                android:background="@null"
                android:textSize="@dimen/dimen_14"
                android:textColor="@color/c_black_6"
                android:layout_weight="1"
                android:padding="@dimen/dimen_10"/>
        <TextView style="@style/style_wrap_content"
                android:id="@+id/tv_item_select_user_05"
                android:padding="@dimen/dimen_10"
                android:drawableRight="@mipmap/icon_query"/>
    </LinearLayout>

    <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/sv_select_dialog"
            style="@style/style_match_wrap_content">


    <android.support.v7.widget.RecyclerView
            style="@style/style_match_wrap_content"
            android:padding="@dimen/dimen_16"
            android:id="@+id/rv_item_select_user"/>

    </com.liaoinstan.springview.widget.SpringView>
</LinearLayout>