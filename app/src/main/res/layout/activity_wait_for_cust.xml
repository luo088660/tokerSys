<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_content"
        android:background="@color/c_gray_12"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

    <include layout="@layout/layout_content_title" />

    <ScrollView style="@style/style_match_content">

        <LinearLayout
                style="@style/style_match_content"
                android:orientation="vertical">

            <LinearLayout
                    style="@style/style_match_wrap_content"

                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_wai_for_t_010"
                        style="@style/style_match_wrap_content"
                        android:background="@color/white_01"
                        android:padding="@dimen/dimen_16"
                        android:text="截止 2019-05-21日，逾期未跟进客户统计排名如下："
                        android:textColor="@color/c_black_6"
                        android:textSize="@dimen/dimen_14" />

                <TextView
                        android:id="@+id/tv_wai_for_t_011"
                        style="@style/style_wrap_content_w0_gc_pd14_ts12_tcb6_drxx"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/dimen_5"
                        android:text="全部项目" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_wait_for"
                    style="@style/style_match_wrap_content"
                    android:background="@color/white_01"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_10">

                <TextView
                        style="@style/style_wrap_content_gc_tcb6"
                        android:layout_width="wrap_content"
                        android:layout_weight="0.5"
                        android:text="排名" />

                <TextView
                        style="@style/style_wrap_content_gc_tcb6"
                        android:layout_weight="2"
                        android:text="项目" />

                <LinearLayout
                        style="@style/style_wrap_content_gc_tcb6"
                        android:layout_weight="1.2">

                    <TextView
                            style="@style/style_wrap_content_gc_tcb6"
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_wai_for_t_03_"
                            android:drawableRight="@mipmap/icon_mrpx"
                            android:text="逾期未跟进" />
                </LinearLayout>

                <LinearLayout
                        style="@style/style_wrap_content_gc_tcb6"
                        android:layout_weight="1.3">

                    <TextView
                            style="@style/style_wrap_content_gc_tcb6"
                            android:id="@+id/tv_wai_for_t_04_"
                            android:layout_width="wrap_content"
                            android:drawableRight="@mipmap/icon_mrpx"
                            android:text="即将进公客池" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/horizontalLine_16" />
            <include layout="@layout/item_layout_wait_for_t"/>

            <com.liaoinstan.springview.widget.SpringView style="@style/style_match_wrap_content"
                    android:id="@+id/sv_wait_for">

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_wait_for"
                        style="@style/style_match_wrap_content"
                        android:background="@color/white_01" />

            </com.liaoinstan.springview.widget.SpringView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


