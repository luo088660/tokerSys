<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_indic_02"
        style="@style/style_match_wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

    <TextView
            style="@style/style_match_wrap_content"
            android:background="@color/c_gray_12"
            android:padding="@dimen/dimen_10"
            android:text="审批意见"
            android:textStyle="bold" />

    <LinearLayout
            style="@style/style_match_wrap_content"
            android:background="@color/white_01"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_10">

        <LinearLayout
                style="@style/style_match_wrap_content"
                android:layout_marginTop="@dimen/dimen_10">

            <TextView
                    style="@style/style_wrap_content_b7_ts14"
                    android:text="审批人\t\t " />

            <TextView
                    android:id="@+id/tv_indic2_01"
                    style="@style/style_wrap_content_ts14_tcb6_ml10"
                    android:layout_weight="1" />

            <TextView
                    style="@style/style_wrap_content_b7_ts14"
                    android:text="审批时间" />

            <TextView
                    android:id="@+id/tv_indic2_02"
                    style="@style/style_wrap_content_ts14_tcb6_ml10"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
                style="@style/style_match_wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_10">

            <TextView
                    style="@style/style_wrap_content_b7_ts14"
                    android:text="审批意见" />

            <TextView
                    android:id="@+id/tv_indic2_03"
                    style="@style/style_wrap_content_ts14_tcb6_ml10"
                    android:layout_weight="1"
                    android:textColor="@color/c_blue_7" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>