<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_wrap_content"
        android:orientation="vertical">

    <LinearLayout
            style="@style/style_match_wrap_content"
            android:background="@color/white_01"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_32"
            android:paddingLeft="@dimen/dimen_32">

        <TextView
                android:id="@+id/tv_pool_01"
                style="@style/style_wrap_content"
                android:text="汇总"
                android:layout_weight="0.51"
                android:textColor="@color/c_black_7"
                android:textSize="@dimen/dimen_12" />

        <TextView
                android:id="@+id/tv_pool_02"
                style="@style/style_wrap_content"
                android:layout_width="@dimen/dimen_0"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="2"
                android:gravity="center"
                android:text="全部项目"
                android:textColor="@color/c_black_7"
                android:textSize="@dimen/dimen_12" />

        <TextView
                android:id="@+id/tv_pool_03"
                style="@style/style_wrap_content"
                android:layout_width="@dimen/dimen_0"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/c_black_7"
                android:textSize="@dimen/dimen_12" />
    </LinearLayout>
    <View style="@style/horizontalLine_16"/>
