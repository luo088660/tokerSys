<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 进度条背景色 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="@color/c_gray_12"
                    android:centerColor="@color/c_gray_12"
                    android:centerY="0.75"
                    android:endColor="@color/c_gray_11"
                    android:angle="270"
            />
        </shape>
    </item>

    <!-- 第二进度条 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                        android:startColor="#b9a4ff"
                        android:centerColor="#c6b7ff"
                        android:centerY="0.75"
                        android:endColor="#c3b2ff"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>

    <!-- 第二进度条 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                        android:startColor="@color/c_red_3"
                        android:centerColor="@color/btn_red"
                        android:centerY="0.75"
                        android:endColor="@color/btn_red"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>
</layer-list>